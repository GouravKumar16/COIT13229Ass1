    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
            String instructions=jTextField1.getText();
            String drone=(String) jComboBox1.getSelectedItem();
          String val=instructions+"##"+drone+"\n";
            try {
            Files.write(Paths.get("dronemessages.txt"), val.getBytes(), StandardOpenOption.APPEND);
                System.out.println("Send successfull");
                jTextField1.setText("");
            }
            catch (IOException e) {
                e.printStackTrace();
            }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
              String x=jTextField2.getText();
            String y= jTextField3.getText();
            if(!x.equalsIgnoreCase("") && !y.equalsIgnoreCase("") )
            {
        
            String dronename=(String) jComboBox1.getSelectedItem();
           String txt="";
          Path path= Paths.get("D:\\23Term1\\Applied Distributed System\\DroneClientProject\\drone.txt");
         try {
             byte[] arr = txt.getBytes();
            Files.write(path, arr);
        }
        catch (IOException ex) {
            System.out.print("Invalid Path");
        }
         
            for(int i=0; i<drone.size(); i++)
            {
                String dronedetails=drone.get(i);
                String droneidfromfile=dronedetails.split("##")[0];
                String dronenamefromfile=dronedetails.split("##")[1];
                if(dronenamefromfile.equalsIgnoreCase(dronename))
                {
                    dronedetails=droneidfromfile+"##"+dronenamefromfile+"##"+x+"##"+y+"\n";
                }
                else
                {
                    dronedetails=dronedetails+"\n";
                }
                
                  try {
            //   BufferedWriter out
            Files.write(Paths.get("D:\\23Term1\\Applied Distributed System\\DroneClientProject\\drone.txt"), dronedetails.getBytes(), StandardOpenOption.APPEND);
           dronefn();
            }
            catch (IOException e) {
                e.printStackTrace();
            }
        
                    // Now calling Files.writeString() method
                    // with path , content & standard charsets
                  
            }
            
            }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
            String x="0";
            String y= "0";
            String dronename=(String) jComboBox1.getSelectedItem();
           String txt="";
          Path path= Paths.get("D:\\23Term1\\Applied Distributed System\\DroneClientProject\\drone.txt");
         try {
             byte[] arr = txt.getBytes();
            Files.write(path, arr);
        }
        catch (IOException ex) {
            System.out.print("Invalid Path");
        }
         
            for(int i=0; i<drone.size(); i++)
            {
                String dronedetails=drone.get(i);
                String droneidfromfile=dronedetails.split("##")[0];
                String dronenamefromfile=dronedetails.split("##")[1];
                if(dronenamefromfile.equalsIgnoreCase(dronename))
                {
                    dronedetails=droneidfromfile+"##"+dronenamefromfile+"##"+x+"##"+y+"\n";
                }
                 else
                {
                    dronedetails=dronedetails+"\n";
                }
                  try {
            //   BufferedWriter out
            Files.write(Paths.get("D:\\23Term1\\Applied Distributed System\\DroneClientProject\\drone.txt"), dronedetails.getBytes(), StandardOpenOption.APPEND);
            dronefn();
            }
            catch (IOException e) {
                e.printStackTrace();
            }
        
                    // Now calling Files.writeString() method
                    // with path , content & standard charsets
                  
            }
    }                                        


    
