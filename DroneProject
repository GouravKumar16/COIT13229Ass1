     */
    public DroneProject() throws IOException {
        initComponents();
       /// run();
        
        ScheduledExecutorService executor =
        Executors.newSingleThreadScheduledExecutor();
        

        Runnable periodicTask = new Runnable() {
        public void run() {
            try {
                dronefn();
            } catch (IOException ex) {
                Logger.getLogger(DroneProject.class.getName()).log(Level.SEVERE, null, ex);
            }
        
        }
     };
        
         executor.scheduleAtFixedRate(periodicTask, 0, 10, TimeUnit.SECONDS);
       
    }
    
    
    public void dronefn() throws IOException{    
 
     jPanel1.removeAll();
     jPanel1.revalidate();
     jPanel1.repaint();

     
     
     drone = new ArrayList<String>();
     drone_ids=new String[20];
     drone_name=new String[20] ;

      
        jComboBox1.removeAllItems();
          File file = new File(
            "D:\\23Term1\\Applied Distributed System\\DroneClientProject\\drone.txt");
          
       
        try {
             BufferedReader droneFileReader= new BufferedReader(new FileReader(file));
        String st_filereader;
        int cnt=0;
        while ((st_filereader = droneFileReader.readLine()) != null)
        {
           
            // Print the string
            
            String droneidfromfile=st_filereader.split("##")[0];
            String dronenamefromfile=st_filereader.split("##")[1];
            jComboBox1.addItem(dronenamefromfile);
         
            
            drone.add(st_filereader);
            drone_name[cnt]=dronenamefromfile;
            drone_ids[cnt]=droneidfromfile;
            
            cnt++;
         JButton droneButton = new JButton(""+dronenamefromfile);
         
         String x_value_drone = st_filereader.split("##")[2];
         String y_value_drone = st_filereader.split("##")[3];
             droneButton.setBounds(Integer.parseInt(x_value_drone),Integer.parseInt(y_value_drone),80,40);
             jPanel1.removeAll();
             jPanel1.revalidate();
             jPanel1.repaint();
             jPanel1.add(droneButton);
            
                    
        }
             } catch (FileNotFoundException ex) {
            Logger.getLogger(DroneProject.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        //fire->
        
        
            BufferedReader csvReaderDrone = new BufferedReader(new FileReader("D:\\23Term1\\Applied Distributed System\\DroneClientProject\\firetest.csv"));
                String row;
                int count=1;
           while ((row = csvReaderDrone.readLine()) != null) {
          String[] data = row.split(",");
         count++;
         // System.out.println(data[1]+"<<<<<<<"+data[2]);
         JButton startButtonDrone = new JButton("Fire!");
         startButtonDrone.setBackground(Color.red);
         
         String x_value_drone = data[1];
         String y_value_drone = data[1];
          
          if(data[1].startsWith("\"") && data[1].endsWith("\""))
        {
            x_value_drone = data[1].substring(1, data[1].length()-1);
        }
              if(data[2].startsWith("\"") && data[2].endsWith("\""))
        {
            y_value_drone = data[2].substring(1, data[2].length()-1);
        }
             startButtonDrone.setBounds(Integer.parseInt(x_value_drone),Integer.parseInt(y_value_drone),80,80);
                jPanel1.add(startButtonDrone);
         
}
  csvReaderDrone.close();
     



 }   
